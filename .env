# Umgebungsinformationen
APP_ENV=development         # Umgebung (z.B. development oder production)
APP_DEBUG=true              # Debug-Modus (true für Entwicklung, false für Produktion)
APP_URL=http://localhost    # Basis-URL der Anwendung

# Datenbankeinstellungen
DB_HOST=localhost           # Hostname oder IP-Adresse der Datenbank
DB_PORT=3306                # Port für die Datenbankverbindung
DB_NAME=diy_shop            # Name der Datenbank
DB_USER=root                # Datenbankbenutzername
DB_PASS=secretpassword      # Datenbankpasswort

# E-Mail-Konfiguration
MAIL_HOST=smtp.example.com      # SMTP-Server für den E-Mail-Versand
MAIL_PORT=587                   # SMTP-Port
MAIL_USER=webshop@example.com   # SMTP-Benutzername
MAIL_PASS=emailpassword         # SMTP-Passwort
MAIL_FROM=webshop@example.com   # Absenderadresse
MAIL_FROM_NAME="DIY Webshop"    # Absendername

# API-Schlüssel (für externe Dienste)
